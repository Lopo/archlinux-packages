_pkgname=bootstrap-sass
pkgname=ruby-${_pkgname}
pkgver=3.3.1.0
pkgrel=1
pkgdesc='Official Sass port of Bootstrap'
arch=('any')
url='http://getbootstrap.com/css/#sass'
license=("MIT")
depends=('ruby-sass')
makedepends=("rubygems")
optdepends=("ruby-compass")
source=("http://gems.rubyforge.org/gems/${_pkgname}-${pkgver}.gem")
noextract=("${_pkgname}-${pkgver}.gem")
options=(!strip)
sha512sums=('e873b60baf507e03d7bca54aed5da06c5cb108ed00a7723ee95ca582301414e66831a70524ab124cdb7014bdbab42dc9b6c532d9ae8398e9359eb79f8354b417')

build() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	gem install --no-user-install --ignore-dependencies -i "${pkgdir}$_gemdir" ${_pkgname}-$pkgver.gem -n "${pkgdir}/usr/bin" || return 1
	install -Dm644 "${pkgdir}${_gemdir}/gems/$_pkgname-$pkgver/LICENSE" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
